<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:layout_marginTop="8dp"
    android:gravity="center_vertical"
    android:elevation="2dp"> <!-- Added shadow for the overall LinearLayout -->

    <TextView
        android:id="@+id/recordingName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="#000000"
        android:textSize="18sp"
        android:text="Recording Name"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingEnd="8dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:elevation="2dp"
        android:layout_marginBottom="8dp"> <!-- Margin for spacing between elements -->

    <Button
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:text="Play"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        style="@style/CustomButtonStyle"
        android:layout_marginEnd="8dp"
        android:elevation="2dp" /> <!-- Added shadow to the Play button -->

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:text="Delete"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        style="@style/CustomButtonStyle"
        android:elevation="2dp" /> <!-- Added shadow to the Delete button -->
</LinearLayout>
    </LinearLayout>
